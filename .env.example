# TracSeq 2.0 Environment Configuration Example
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/tracseq
DATABASE_POOL_SIZE=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# Authentication
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=3600

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# S3 Buckets
S3_LABORATORY_DATA_BUCKET=tracseq-laboratory-data
S3_SEQUENCING_RESULTS_BUCKET=tracseq-sequencing-results
S3_ML_MODELS_BUCKET=tracseq-ml-models

# Service URLs (for local development)
AUTH_SERVICE_URL=http://localhost:8081
SAMPLE_SERVICE_URL=http://localhost:8082
TEMPLATE_SERVICE_URL=http://localhost:8083
SEQUENCING_SERVICE_URL=http://localhost:8084
NOTIFICATION_SERVICE_URL=http://localhost:8085
TRANSACTION_SERVICE_URL=http://localhost:8086
EVENT_SERVICE_URL=http://localhost:8087
STORAGE_SERVICE_URL=http://localhost:8088

# API Gateway
API_GATEWAY_PORT=8089
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Feature Flags
ENABLE_ML_PREDICTIONS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ADVANCED_SEARCH=true

# Laboratory Specific
DEFAULT_STORAGE_TEMPERATURE=-80
SAMPLE_EXPIRATION_DAYS=365
SEQUENCING_QUEUE_MAX_SIZE=1000

# Development Settings
DEBUG=true
LOG_LEVEL=info
ENVIRONMENT=development