{
  "name": "tracseq2.0",
  "version": "2.0.0",
  "description": "TracSeq 2.0 Laboratory Management System - AI-powered sample tracking and document processing",
  "private": true,
  "type": "module",
  "workspaces": [
    "lab_manager",
    "lab_manager/frontend"
  ],
  "scripts": {
    "dev": "pnpm --filter @app/web dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "fix": "pnpm -r fix",
    "test": "pnpm -r test",
    "test:web": "pnpm test --filter @app/web",
    "test:api": "pnpm test --filter @app/api",
    "test:db": "pnpm test --filter @app/db",
    "clean": "pnpm -r clean",
    "install:all": "pnpm install -r",
    
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:frontend": "playwright test --project=frontend-e2e",
    "test:e2e:api": "playwright test --project=api-integration",
    "test:e2e:integration": "playwright test --project=full-stack",
    "test:e2e:mobile": "playwright test --project=mobile-chrome",
    "test:e2e:browsers": "playwright test --project=firefox --project=safari",
    
    "test:rust": "cargo test --workspace",
    "test:rust:integration": "cargo test --workspace integration",
    "test:rust:unit": "cargo test --workspace --lib",
    "test:rust:lab-manager": "cargo test --package lab_manager",
    "test:rust:auth": "cargo test --package auth_service",
    "test:rust:samples": "cargo test --package sample_service",
    
    "test:all": "pnpm test:rust && pnpm test:e2e",
    "test:ci": "pnpm test:rust:unit && pnpm test:e2e:headed",
    "test:quick": "pnpm test:rust:unit && pnpm test:e2e:frontend",
    
    "test:services:start": "docker-compose -f docker-compose.working-microservices.yml up -d",
    "test:services:stop": "docker-compose -f docker-compose.working-microservices.yml down",
    "test:services:restart": "pnpm test:services:stop && pnpm test:services:start",
    "test:frontend:start": "cd lab_manager/frontend && pnpm dev",
    
    "test:watch": "cargo watch -x 'test --workspace'",
    "test:coverage": "cargo tarpaulin --workspace --out Html",
    
    "validate:system": "pnpm test:services:start && sleep 10 && pnpm test:all"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@types/node": "^24.0.4",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.12.2"
}
