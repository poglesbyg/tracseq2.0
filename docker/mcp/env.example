# MCP Docker Environment Configuration Example
# Copy this file to .env and update values as needed

# General Configuration
LOG_LEVEL=info
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/tracseq
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=tracseq

# Redis Configuration
REDIS_URL=redis://redis:6379

# MCP Proxy Configuration
MCP_PROXY_PORT=9500
MCP_METRICS_PORT=9590
METRICS_ENABLED=true
SERVICE_DISCOVERY_ENABLED=true

# Consul Configuration
CONSUL_HOST=consul
CONSUL_PORT=8500

# Ollama Configuration
OLLAMA_API_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2048

# ChromaDB Configuration
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_PERSISTENCE=true

# Security
JWT_SECRET=your-secret-key-change-in-production
API_KEY=your-api-key-change-in-production

# Service URLs (for non-MCP fallback)
AUTH_SERVICE_URL=http://auth-service:8001
SAMPLE_SERVICE_URL=http://sample-service:8002
STORAGE_SERVICE_URL=http://enhanced-storage-service:8005

# Feature Flags
MCP_ENABLED=true
USE_OLLAMA=true
ENABLE_MONITORING=true
ENABLE_TRACING=false

# Resource Limits
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_MS=30000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Logging
LOG_FORMAT=json
LOG_TO_FILE=false
LOG_FILE_PATH=/app/logs

# Development Settings (override in .env.development)
DEBUG=false
WATCH_MODE=false
HOT_RELOAD=false 