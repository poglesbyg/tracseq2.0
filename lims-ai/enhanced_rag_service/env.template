# Enhanced RAG Service Configuration Template
# Copy this to .env and configure for your environment

# =====================================
# SERVICE CONFIGURATION
# =====================================
SERVICE_NAME=Enhanced RAG Service
VERSION=0.1.0
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8086

# =====================================
# DATABASE CONFIGURATION
# =====================================
DATABASE__URL=postgresql://rag_user:rag_password@localhost:5432/enhanced_rag_db
DATABASE__POOL_SIZE=10
DATABASE__ECHO=false

# =====================================
# VECTOR STORE CONFIGURATION
# =====================================
VECTOR_STORE__PROVIDER=chromadb
VECTOR_STORE__COLLECTION_NAME=lab_documents
VECTOR_STORE__EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_STORE__CHUNK_SIZE=512
VECTOR_STORE__SIMILARITY_THRESHOLD=0.7
VECTOR_STORE__CHROMA_PERSIST_DIRECTORY=./chroma_db

# =====================================
# LLM CONFIGURATION
# =====================================
LLM__PROVIDER=openai
LLM__MODEL_NAME=gpt-3.5-turbo
LLM__TEMPERATURE=0.1
LLM__MAX_TOKENS=2048
LLM__OPENAI_API_KEY=your-openai-api-key-here

# =====================================
# DOCUMENT PROCESSING CONFIGURATION
# =====================================
DOCUMENT_PROCESSING__UPLOAD_DIR=./uploads
DOCUMENT_PROCESSING__MAX_FILE_SIZE=52428800
DOCUMENT_PROCESSING__OCR_ENABLED=true
DOCUMENT_PROCESSING__OCR_LANGUAGE=eng

# =====================================
# SECURITY CONFIGURATION
# =====================================
SECRET_KEY=your-super-secret-key-change-this-in-production
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# =====================================
# INTEGRATION CONFIGURATION
# =====================================
AUTH_SERVICE_URL=http://auth-service:8080
STORAGE_SERVICE_URL=http://enhanced-storage-service:8082
NOTIFICATION_SERVICE_URL=http://notification-service:8085

# =====================================
# FEATURE FLAGS
# =====================================
ENABLE_TEMPLATE_MATCHING=true
ENABLE_FORM_VALIDATION=true
ENABLE_INTELLIGENT_EXTRACTION=true
ENABLE_MULTI_MODAL=true
ENABLE_REAL_TIME_PROCESSING=true 
