#!/bin/bash
# Git pre-push hook for TracSeq 2.0
# To install: git config core.hooksPath .githooks

echo "üöÄ Running pre-push checks..."

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

# Quick checks only - full checks are in CI
echo "Running quick lint check..."
if cd lims-ui && pnpm lint --quiet 2>/dev/null; then
    echo -e "${GREEN}‚úÖ Frontend lint passed${NC}"
else
    echo -e "${RED}‚ùå Frontend lint failed${NC}"
    echo -e "${YELLOW}Run 'make lint-fix' to fix issues${NC}"
    exit 1
fi

cd ..

echo "Running Rust format check..."
if cargo fmt --all -- --check 2>/dev/null; then
    echo -e "${GREEN}‚úÖ Rust format check passed${NC}"
else
    echo -e "${RED}‚ùå Rust format check failed${NC}"
    echo -e "${YELLOW}Run 'make fmt' to fix formatting${NC}"
    exit 1
fi

echo -e "${GREEN}‚úÖ Pre-push checks passed!${NC}"
echo -e "${YELLOW}Note: Full CI checks will run on GitHub${NC}"

exit 0 